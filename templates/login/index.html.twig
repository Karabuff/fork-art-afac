{% extends 'base.html.twig' %}

{% block title %}
    Login
{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="bg-info p-2 m-4">
    <form action="{{ path('app_login') }}" method="post" class=" my-5 d-flex flex-column align-items-center">
        <label class="mb-2 text-primary-inverse" for="username">Email:</label>
        <input class="mb-2" type="text" id="username" name="_username" value="{{ last_username }}">

        <label class="mb-2 text-primary-inverse" for="password">Mot de passe:</label>
        <input class="mb-2" type="password" id="password" name="_password">

        <button class="btn btn-primary" type="submit">Se connecter</button>
    </form>
    </div>
{% endblock %}
