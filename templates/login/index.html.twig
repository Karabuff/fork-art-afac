{% extends 'base.html.twig' %}

{% block title %}
    Login
{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="row my-auto">
    <div class="bg-primary align-middle mx-auto p-5 col-10 offset-lg-3 col-lg-4">
    <form action="{{ path('app_login') }}" method="post" class=" mb-5 d-flex flex-column align-items-center">
        <label class="mb-2 text-primary-inverse" for="username">Email:</label>
        <input class="mb-2 input-group text-center" type="text" id="username" name="_username" value="{{ last_username }}">

        <label class="mb-2 text-primary-inverse" for="password">Mot de passe:</label>
        <input class="mb-2 input-group text-center" type="password" id="password" name="_password">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="btn btn-info" type="submit">Se connecter</button>
    </form>
        <a class="btn btn-danger" href="{{ path('app_forgot_password_request') }}">Reinitialiser votre mot de passe</a>

    </div>
    </div>
{% endblock %}
