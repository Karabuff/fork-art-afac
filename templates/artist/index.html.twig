{% extends 'base.html.twig' %}

{% block title %}Index Artistes{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Index des artistes </h1>
        <h2> Liste des artistes :</h2>
        <ul>
            {% for artist in artists %}
                <li><a href="{{ path('artist_show', {id: artist.id}) }}">{{ artist.name }}</a></li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
