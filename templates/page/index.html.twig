{% extends 'base.html.twig' %}

{% block title %}Administration - Liste de toutes les pages{% endblock %}

{% block body %}
    <div class="container mt-5 mb-5">
        <h1>Liste des pages</h1>
        <div class="table-responsive">
            <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Titre de la page</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for page in pages %}
                <tr>
                    <td>{{ page.id }}</td>
                    <td>{{ page.title }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('app_page_show', {'id': page.id}) }}">Voir</a>
                        <a class="btn btn-info" href="{{ path('app_page_edit', {'id': page.id}) }}">Editer</a>
                    </td>
                </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Aucun enregistrement trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('app_page_new') }}" class="btn btn-primary">Créer une nouvelle page</a>
        </div>
    </div>
    
{% endblock %}
