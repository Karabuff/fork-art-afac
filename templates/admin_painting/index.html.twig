{% extends 'base.html.twig' %}

{% block title %}Painting index{% endblock %}

{% block body %}
    <h1>Painting index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Date</th>
                <th>Anecdote</th>
                <th>Height</th>
                <th>Width</th>
                <th>Image</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for painting in paintings %}
            <tr>
                <td>{{ painting.id }}</td>
                <td>{{ painting.title }}</td>
                <td>{{ painting.date ? painting.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ painting.anecdote }}</td>
                <td>{{ painting.height }}</td>
                <td>{{ painting.width }}</td>
                <td>{{ painting.image }}</td>
                <td>{{ painting.createdAt ? painting.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_painting_show', {'id': painting.id}) }}">show</a>
                    <a href="{{ path('app_admin_painting_edit', {'id': painting.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_painting_new') }}">Create new</a>
{% endblock %}
