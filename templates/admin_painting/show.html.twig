{% extends 'base.html.twig' %}

{% block title %}{{ painting.title }}{% endblock %}

{% block body %}
    <h1 class="d-flex flex-row justify-content-center my-3">{{ painting.title }}</h1>
    <div class="m-5 table-responsive">
        <table class="table table-striped">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ painting.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ painting.title }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ painting.date ? painting.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Anecdote</th>
                <td>{{ painting.anecdote }}</td>
            </tr>
            <tr>
                <th>Hauteur</th>
                <td>{{ painting.height }}</td>
            </tr>
            <tr>
                <th>Longueur</th>
                <td>{{ painting.width }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ painting.image }}</td>
            </tr>
            <tr>
                <th>Date de Création</th>
                <td>{{ painting.createdAt ? painting.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            </tbody>
        </table>
    </div>
    <div class=" d-flex justify-content-center">
    <a class="btn btn-primary my-3" href="{{ path('app_admin_painting_index') }}">Retour à l'index</a>
    </div>
<div class="m-3 d-flex justify-content-center">
    <a class="btn btn-info" href="{{ path('app_admin_painting_edit', {'id': painting.id}) }}">Editer</a>
</div>
    {{ include('admin_painting/_delete_form.html.twig') }}
    </div>
{% endblock %}
