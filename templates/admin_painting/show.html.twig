{% extends 'base.html.twig' %}

{% block title %}Painting{% endblock %}

{% block body %}
    <h1>Painting</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ painting.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ painting.title }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ painting.date ? painting.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Anecdote</th>
                <td>{{ painting.anecdote }}</td>
            </tr>
            <tr>
                <th>Height</th>
                <td>{{ painting.height }}</td>
            </tr>
            <tr>
                <th>Width</th>
                <td>{{ painting.width }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ painting.image }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ painting.createdAt ? painting.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_painting_index') }}">back to list</a>

    <a href="{{ path('app_admin_painting_edit', {'id': painting.id}) }}">edit</a>

    {{ include('admin_painting/_delete_form.html.twig') }}
{% endblock %}
